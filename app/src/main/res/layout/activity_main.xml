<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="25dp"
    android:paddingTop="40dp"
    android:paddingRight="25dp"
    android:paddingBottom="40dp">

    <!-- top panel with avatar, chat and settings icon-->
    <LinearLayout
        android:id="@+id/Top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/UserAvatar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:contentDescription="@string/user_s_avatar"
            android:scaleType="fitCenter"
            android:src="@drawable/user">

        </ImageView>


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:text="@string/Chats"
            android:textColor="@color/pink"
            android:textSize="20dp"
            android:textStyle="bold">

        </TextView>

        <ImageButton
            android:id="@+id/settingIcon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:contentDescription="@string/settings_icon"
            android:scaleType="centerInside"
            android:src="@drawable/settings">

        </ImageButton>

    </LinearLayout>

    <!--search-->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:hint="Search"
        android:paddingLeft="10dp"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="40dp"
        android:textColorHint="@color/pink"
        android:textColor="@color/pink"
        android:background="@color/light_pink"
        >

    </EditText>

    <!--character and add-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <ImageView
                android:id="@+id/CharacterAvatar"

                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentLeft="true"
                android:background="@color/white"
                android:contentDescription="@string/user_s_avatar"
                android:scaleType="fitCenter"
                android:src="@drawable/ray">

            </ImageView>

            <TextView
                android:id="@+id/CharacterName"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_above="@id/CharacterMessage"
                android:layout_marginHorizontal="20dp"
                android:layout_toRightOf="@id/CharacterAvatar"
                android:text="testtext"
                android:textColor="@color/pink"

                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/CharacterMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="20dp"
                android:layout_toRightOf="@id/CharacterAvatar"
                android:text="testtext2"
                android:textColor="@color/pink"
                >


            </TextView>

        </RelativeLayout>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="+"
            android:textSize="20dp"
            android:textColor="@color/pink"
            android:backgroundTint="@color/light_pink"
            >

        </Button>

    </RelativeLayout>


</LinearLayout>